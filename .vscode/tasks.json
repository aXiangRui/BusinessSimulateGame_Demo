{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "src/*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-static-libgcc",
                "-static-libstdc++",
                "-I",
                "${fileDirname}\\SDL2\\include",
                "-L",
                "${fileDirname}\\SDL2\\lib",               
                "-l", "SDL2main",
                "-l", "SDL2_ttf",
                "-l", "SDL2_image",
                "-l", "SDL2_mixer",                
                "-l", "SDL2",
                "-l", "ole32",
                "-l", "winmm",
                "-mwindows"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}